<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Rotten Mangoes</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Submit a movie!", new_movie_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.full_name %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <% if current_user.admin? %><li><%= link_to "Admin", admin_users_path %></li><% end %>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Logout", session_path("current"), method: :delete %></li>
          </ul>
        </li>
        <% else %>
        <li><%= link_to "Signup", new_user_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Login <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <%= form_tag sessions_path do %>
              <div>
                <%= label_tag :email %><br/>
                <%= text_field_tag :email %>
              </div>
              <div>
                <%= label_tag :password %><br/>
                <%= password_field_tag :password %>
              </div>
              <div><%= submit_tag "Log In" %></div>
            <% end %>
          </ul>
        </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>