<div class="row">
  <div class="col-md-12">
  <%= form_tag movies_path, method: "get" do %>
  <div class="row">
    <div class="col-md-7">
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon" id="search_field">Search for</span>
          <%= text_field_tag(:q, nil, class: "form-control", "aria-describedby": "search_field") %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon">Duration</span>
          <%= select_tag :duration, options_for_select(["Under 90 minutes", "Between 90 and 120 minutes", "Over 120 minutes"]), include_blank: true, class: ["form-control", "duration-search"] %>
        </div>
      </div>
    </div>
    <div class="col-md-1 text-right">
      <%= submit_tag("Search", class: ["btn", "btn-default"]) %>
    </div>
  <% end %>
  </div>
</div>